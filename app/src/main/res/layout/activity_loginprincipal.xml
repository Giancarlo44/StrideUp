<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    >

    <ImageView
        android:id="@+id/chicoinicio"
        android:layout_width="338dp"
        android:layout_height="361.83dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/chicoinicio"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/transforma_tus_pasos_en_logros"
        android:layout_width="343dp"
        android:layout_height="120dp"
        android:gravity="center"
        android:text="@string/transforma_tus_pasos_en_logros"
        android:textColor="@color/cremita"
        android:textSize="45sp"
        android:textStyle="bold"
        android:layout_below="@id/chicoinicio"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button_siiga"
        android:layout_width="360dp"
        android:layout_height="58dp"
        android:backgroundTint="@color/primary"
        android:text="@string/iniciar_sesi_n_con_siiga"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_below="@id/transforma_tus_pasos_en_logros"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button_microsoft"
        android:layout_width="360dp"
        android:layout_height="58dp"
        android:backgroundTint="@color/primary"
        android:text="@string/iniciar_sesi_n_con_microsoft"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_below="@id/button_siiga"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/logosanta"
        android:layout_width="38.91dp"
        android:layout_height="39dp"
        android:layout_alignBottom="@id/button_siiga"
        android:layout_alignParentStart="true"
        android:layout_marginStart="38dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/logosanta" />

    <ImageView
        android:id="@+id/logomicrosoft"
        android:layout_width="61dp"
        android:layout_height="39dp"
        android:layout_alignBottom="@id/button_microsoft"
        android:layout_alignParentStart="true"
        android:layout_marginStart="29dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/microsoft" />

</android.widget.RelativeLayout>






